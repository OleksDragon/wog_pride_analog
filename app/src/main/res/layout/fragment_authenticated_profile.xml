<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/user_info_authenticated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Інформація про користувача"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/settings_button_authenticated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Налаштування"
        android:layout_gravity="center"
        android:backgroundTint="@color/white_button"
        android:textColor="#17a117"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/about_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Про програму"
        android:layout_gravity="center"
        android:backgroundTint="@color/white_button"
        android:textColor="#17a117"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вийти"
        android:layout_gravity="center"
        android:backgroundTint="@color/white_button"
        android:textColor="#17a117"
        android:layout_marginBottom="8dp"/>

    <!-- Секція для поповнення балансу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поповнити баланс:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/recharge_amount_input"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:hint="Сума (₴)"
                android:inputType="number"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/recharge_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поповнити"
                android:backgroundTint="@color/white_button"
                android:textColor="#17a117"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>